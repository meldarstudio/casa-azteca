---
import "~/styles/global.css";
import { defaultMeta } from "~/constants";
import Navigation from "~/components/Navigation.astro";
import Footer from "~/components/Footer.astro";

interface Props {
  title?: string;
  description?: string;
  noCanonical?: boolean;
  noIndex?: boolean;
}

const {
  title = defaultMeta.title,
  description = defaultMeta.description,
  noCanonical = false,
  noIndex = false,
} = Astro.props;

const ogImageURL = new URL(defaultMeta.ogImagePath, Astro.url.origin).href;
---

<!doctype html>
<html
  lang="en"
  class="h-full w-full scroll-pt-14 md:scroll-pt-4 md:scroll-smooth"
>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    {!noCanonical && <link rel="canonical" href={Astro.url} />}
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:locale" content="en_US" />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content={defaultMeta.title} />
    <meta property="og:image" content={ogImageURL} />
    <meta
      property="og:image:alt"
      content="logo and name of the site with a dark background"
    />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />
    <meta name="twitter:image:alt" content="alt_description" />
    <meta name="generator" content={Astro.generator} />
    {
      noIndex ? (
        <Fragment>
          <meta name="robots" content="noindex, nofollow" />
          <meta name="googlebot" content="noindex, nofollow" />
        </Fragment>
      ) : (
        <Fragment>
          <meta name="robots" content="follow, index" />
          <link rel="sitemap" href="/sitemap-index.xml" />
          <meta
            name="googlebot"
            content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1"
          />
        </Fragment>
      )
    }
  </head>
  <body class="relative h-full w-full bg-stone-100 antialiased">
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:rounded focus:bg-amber-400 focus:px-4 focus:py-2 focus:font-semibold focus:text-black"
      >Skip to main content</a
    >
    <Navigation />
    <main id="main-content">
      <slot />
    </main>
    <Footer />
  </body>
</html>
