---
import Layout from "~/layouts/Layout.astro";
import MenuToc from "~/components/toc/MenuToc.astro";
import Category from "~/components/Category.astro";
import { categories } from "~/constants";
---

<Layout
  title="Mexican Restaurant Menu | Casa Azteca Barre, VT - Tacos, Fajitas, Burritos"
  description="Browse our authentic Mexican restaurant menu in Barre, Vermont. Fresh tacos, sizzling fajitas, handmade burritos, and traditional specialties. Appetizers from $5.75, entrees from $11.99. Dine-in, takeout & delivery available."
>
  <div class="max-w-6xl px-4 py-16 sm:px-8 lg:mx-auto">
    <h1 class="text-3xl font-bold tracking-tight md:text-4xl">Our Menu</h1>
    <p
      class="mt-4 max-w-prose text-lg leading-relaxed text-pretty text-stone-600"
    >
      Authentic Mexican cuisine in Barre, Vermont. Fresh tacos, sizzling
      fajitas, handmade burritos, and traditional specialties prepared daily.
      Vegetarian and gluten-free options available.
    </p>
    <div
      class="mt-12 flex flex-col gap-6 md:flex-row md:justify-between lg:gap-12"
    >
      <MenuToc />
      <div class="grid grid-cols-1 gap-8">
        {categories.map((props) => <Category {...props} />)}
      </div>
    </div>
  </div>
</Layout>
