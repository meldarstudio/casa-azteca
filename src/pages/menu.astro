---
import Layout from "~/layouts/Layout.astro";
import MenuToc from "~/components/toc/MenuToc.astro";
import Category from "~/components/Category.astro";
import { categories } from "~/constants";
---

<Layout
  title="Menu | Casa Azteca Mexican Restaurant"
  description="Explore a diverse menu of authentic Mexican dishes, meticulously crafted with locally sourced, fresh ingredients. Discover the perfect blend of tradition and local flair, elevating your dining experience with every bite"
>
  <div class="max-w-6xl px-4 py-16 sm:px-8 lg:mx-auto">
    <h1 class="text-3xl font-bold tracking-tight md:text-4xl">Menu</h1>
    <p class="mt-4 max-w-prose leading-relaxed text-stone-600">
      Explore a diverse menu of authentic Mexican dishes, meticulously crafted
      with locally sourced, fresh ingredients.
    </p>
    <div
      class="mt-12 flex flex-col gap-6 md:flex-row md:justify-between lg:gap-12"
    >
      <MenuToc />
      <div class="grid grid-cols-1 gap-8">
        {categories.map((props) => <Category {...props} />)}
      </div>
    </div>
  </div>
</Layout>
