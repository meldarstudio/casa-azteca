---
import burritos from "~/assets/menu/burritos.webp";
import tacos from "~/assets/menu/tacos_de_birria.webp";
import fajitas from "~/assets/menu/fajita_texana.webp";
import desserts from "~/assets/menu/combo_dessert.webp";
import { Image } from "astro:assets";

const popularDishes = [
  {
    title: "Sizzling Mexican Fajitas",
    href: "/menu#fajitas",
    description:
      "Authentic Mexican fajitas served sizzling hot with marinated chicken, steak, or shrimp, grilled bell peppers, onions, warm flour tortillas, Mexican rice, and fresh guacamole",
    img: {
      src: fajitas,
      alt: "Sizzling Mexican fajitas with grilled chicken, bell peppers, and onions on cast iron plate",
    },
  },
  {
    title: "Authentic Street Tacos",
    href: "/menu#tacos",
    description:
      "Traditional Mexican street tacos with soft corn tortillas, seasoned carnitas, carne asada, or pollo, topped with fresh onions, cilantro, and house-made salsa verde",
    img: {
      src: tacos,
      alt: "Three authentic Mexican street tacos with carnitas, onions, and cilantro",
    },
  },
  {
    title: "Hand-Rolled Burritos",
    href: "/menu#burritos",
    description:
      "Oversized flour tortillas stuffed with seasoned meat, Mexican rice, refried beans, lettuce, cheese, sour cream, and fresh pico de gallo, grilled to golden perfection",
    img: {
      src: burritos,
      alt: "Large Mexican burrito cut in half showing seasoned meat, rice, beans, and fresh toppings",
    },
  },
  {
    title: "Traditional Mexican Desserts",
    href: "/menu#desserts",
    description:
      "House-made churros dusted with cinnamon sugar and served with rich chocolate sauce, plus creamy traditional flan with caramel - perfect endings to your Mexican feast",
    img: {
      src: desserts,
      alt: "Traditional Mexican desserts featuring cinnamon sugar churros with chocolate sauce and creamy flan",
    },
  },
];
---

<section class="bg-stone-100">
  <div class="mx-auto max-w-6xl px-4 py-24 sm:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <span
        class="inline-block w-fit rounded-full bg-amber-400 px-4 py-1 text-sm font-semibold tracking-tight text-amber-950"
        >Customer Favorites</span
      >
      <h2
        class="mt-4 text-3xl font-bold tracking-tight text-balance text-stone-900 md:text-4xl"
      >
        Most Popular Mexican Dishes in Barre
      </h2>
      <p class="mt-4 text-lg text-pretty text-stone-600">
        Taste the authentic Mexican flavors that keep our customers coming back
        for more â€“ from sizzling fajitas to hand-rolled burritos and traditional
        street tacos.
      </p>
    </div>
    <ul class="mt-8 grid w-full grid-cols-1 gap-4 md:grid-cols-2 md:gap-2">
      {
        popularDishes.map((dish) => (
          <li class="relative overflow-hidden rounded-md transition-colors">
            <article>
              <h3 class="sr-only">{dish.title}</h3>
              <a
                class="absolute inset-0 bg-gradient-to-b from-transparent to-stone-900/50 opacity-0 transition-all hover:opacity-100 focus:opacity-100 focus:outline-2 focus:outline-amber-400"
                href={dish.href}
              >
                <span
                  class="absolute top-2 left-2 rounded-md bg-amber-400 px-2 py-1 text-sm font-medium"
                  aria-hidden="true"
                >
                  {dish.title}
                </span>
                <p class="absolute bottom-2 left-2 p-2 text-white">
                  {dish.description}
                </p>
              </a>
              <Image
                src={dish.img.src}
                alt={dish.img.alt}
                layout="constrained"
                sizes="(max-width: 768px) 100vw, (max-width: 1152px) 50vw, 576px"
              />
            </article>
          </li>
        ))
      }
    </ul>
  </div>
</section>
